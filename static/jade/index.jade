extends layout

block title
    title Booking Test

block content
    h1 Booking Test


    nav
        ul#tabs
            li
                a(href="#booking") Add booking
            li
                a(href="#listings") Bookings List

    section#booking
        form(method="post")
            fieldset
                label(for="first_name") First name
                input#first_name(name="first_name", type="text", maxlength="80")
            fieldset
                label(for="last_name") Last name
                input#last_name(name="last_name", type="text", maxlength="80")
            fieldset
                label(for="dining_date") Dining Date
                input#dining_date(name="dining_date", type="text", maxlength="10")
            fieldset
                label(for="num_covers") Number of covers
                input#num_covers(name="num_covers", type="number", maxlength="3")
            fieldset
                label(for="phone") Phone number
                input#phone(name="phone", type="tel", maxlength="20")
            fieldset
                label(for="email") email
                input#email(name="email", type="email", maxlength="80")
            fieldset
                input#submit(type="submit", value="Submit")
                button#forceSubmit.hide Submit anyway
                input#reset(type="reset", value="Reset")

    section#listings
        table
            thead
                tr
                    th Status
                    th First name
                    th Last name
                    th Dining Date
                    th Number of Covers
                    th Phone
                    th Email
            tbody

